<nav>
   <div class="nav-wrapper #212121 grey darken-4">
      <a href="#!" class="brand-logo hide-on-med-and-down #ffeb3b yellow-text">Screen Rant Scraper</a>
      <ul class="right hide-on-small-only">
        <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
        <li><a href="/saved"><i class="material-icons left">save</i>Saved Articles</a></li>
      </ul>
    </div>
</nav>

<div class="container">

  {{#each articles}}

  <div class="row" id="{{_id}}">
    <div class="col s12 m12">
      <div class="card #212121 grey darken-4 hoverable">
        <div class="card-content white-text">
          <span class="card-title">{{title}}</span>
          <p>{{summary}}</p>
        </div>
        <div class="card-action">
          <a class="btn #ffeb3b yellow btn #000000 black-text card-button" target="_blank" href="https://screenrant.com{{URL}}">Read
            Article</a>
          <a data-id="{{_id}}" id="open-notes" class="waves-effect #ffeb3b yellow btn #000000 black-text btn modal-trigger card-button" href="#modal1">Notes</a>
          <a data-id="{{_id}}" id="remove-article" class="btn waves-effect #ffeb3b yellow btn #000000 black-text right card-button"
            href="#">Delete</a>
        </div>
      </div>
    </div>
  </div>

  {{/each}}

    <div id="modal1" class="modal modal-fixed-footer">
      <div class="modal-content">
       <h3>Notes</h3>
       <h4 id="note-title"></h4>
          <div class="row">
            <form class="col s12">
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="textarea1" class="materialize-textarea"></textarea>
                  <label for="textarea1">Add Notes Here</label>
                </div>
              </div>
            </form>
          </div>
       </div>
       <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-orange btn-flat notes-save">Save</a>
        <a href="#!" class="modal-close waves-effect waves-orange btn-flat notes-cancel">Cancel</a>
      </div>
    </div>
</div>
